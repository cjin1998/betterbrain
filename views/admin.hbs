<!DOCTYPE html>
<html>

<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td,
        th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>

<body>
    <a href="/logout" class="btn btn-success">
        <h3>Logout As Admin</h3>
    </a>

    <h2>Edit Existing Episodes</h2>

    <table>
        <tr>
            <th>Name</th>
            <th>Published Date</th>
            <th>Status</th>
            <th>Delete</th>
        </tr>
        {{#each vid}}
        <tr>
            <td>{{name}}</td>
            <td>{{postedat}}</td>
            <td>{{status}} <a href="/toggle/{{_id}}">Toggle</a></td>
            <td><a href="/delete/{{_id}}">Delete</a></td>
        </tr>
        {{/each}}

    </table>

    <form method="POST"
        style="max-width: 300px; margin: auto; margin-top: 50px; border: 0.5px solid gray; padding: 30px 30px 30px 30px">
        <h3 style="color: black">Input new episode</h3>
        <div class="form-group">
            <label style="color: black">Name</label>
            <input type="text" name="title" class="form-control">
        </div>
        <div class="form-group">
            <label style="color: black">Published Date</label>
            <input type="date" name="postedat" class="form-control">
        </div>
        <div class="form-group">
            <label style="color: black">Link</label>
            <input type="text" name="link" class="form-control">
        </div>

        <div class="form-group">
            <label style="color: black">Description</label>
            <textarea rows="10" cols="35" type="text" name="description" class="form-control"></textarea>
        </div>

        <label for="status">Display Status</label>
        <select name="status" id="status">
            <option value="current">Current</option>
            <option value="archive">Archive</option>

        </select>

        <div class="form-group">
            <input type="submit" name="clicked" value="Add">
        </div>


        <h3 style="color: black">Update Admin Info</h3>

        <div class="form-group">
            <label style="color: black">Password</label>
            <input type="password" name="password" class="form-control" value={{adminData.password}}>
        </div>

        <div class="form-group">
            <label style="color: black">Confirm Password</label>
            <input type="password" name="repeat" class="form-control" value={{adminData.password}}>
        </div>

        <div class="form-group">
            <label style="color: black">About Us</label>
            <textarea rows="10" cols="35" type="text" name="about" class="form-control">{{adminData.about}}</textarea>
        </div>

        <div class="form-group">
            <label style="color: black">Twitter Link</label>
            <input type="text" name="tlink" class="form-control" value={{adminData.twitLink}}>
        </div>

        <div class="form-group">
            <label style="color: black">Instagram Link</label>
            <input type="text" name="ilink" class="form-control" value={{adminData.instLink}}>
        </div>

        <div class="form-group">
            <input type="submit" name="clicked" value="Update">
        </div>


    </form>
    <form>

    </form>

    {{!-- {{data['bio']}} --}}

</html>